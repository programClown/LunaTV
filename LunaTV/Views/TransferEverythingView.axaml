<UserControl
    x:Class="LunaTV.Views.TransferEverythingView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Styles>
        <Style Selector="PathIcon.Indicator">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, Auto, *">
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                Foreground="{DynamicResource SemiPurple6Color}"
                Text="万物快传"
                Theme="{DynamicResource TitleTextBlock}" />
            <TextBlock
                HorizontalAlignment="Center"
                Classes="H5"
                Text="安全、快速、简单的传输服务"
                Theme="{DynamicResource TitleTextBlock}" />
            <TextBlock
                HorizontalAlignment="Center"
                Classes="Tertiary"
                Text="基于WebRTC的端到端服务 - 无需注册，即传即用" />

            <Border
                Height="2"
                MaxWidth="600"
                Opacity="0.3">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0.0" Color="#FFDD9BE0" />
                        <GradientStop Offset="0.5" Color="#FF490A61" />
                        <GradientStop Offset="1.0" Color="#FFB449C2" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>

        <Border
            Grid.Row="1"
            Margin="0,40,0,0"
            Padding="0"
            HorizontalAlignment="Center"
            Classes="Shadow"
            Theme="{StaticResource CardBorder}">
            <u:SelectionList>
                <u:SelectionList.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Margin="16,4"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="16" />
                    </ItemsPanelTemplate>
                </u:SelectionList.ItemsPanel>
                <u:SelectionListItem>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon Classes="Indicator" Data="{DynamicResource SemiIconUpload}" />
                        <TextBlock Text="文件传输" />
                    </StackPanel>
                </u:SelectionListItem>
                <u:SelectionListItem>
                    <u:SelectionListItem.Styles>
                        <Style Selector="u|SelectionListItem:selected">
                            <Setter Property="Foreground" Value="{DynamicResource SemiGreen7Color}" />
                        </Style>
                    </u:SelectionListItem.Styles>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon Classes="Indicator" Data="{DynamicResource SemiIconComment}" />
                        <TextBlock Text="文本消息" />
                    </StackPanel>
                </u:SelectionListItem>
                <u:SelectionListItem>
                    <u:SelectionListItem.Styles>
                        <Style Selector="u|SelectionListItem:selected">
                            <Setter Property="Foreground" Value="{DynamicResource SemiPurple7Color}" />
                        </Style>
                    </u:SelectionListItem.Styles>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon Classes="Indicator" Data="{DynamicResource SemiIconDesktop}" />
                        <TextBlock Text="共享桌面" />
                    </StackPanel>
                </u:SelectionListItem>
            </u:SelectionList>
        </Border>

        <Panel Grid.Row="2">
            <Grid RowDefinitions="Auto,*">
                <Border
                    Grid.Row="0"
                    Margin="0,20,0,0"
                    Padding="0"
                    HorizontalAlignment="Center"
                    Classes="Shadow"
                    Theme="{StaticResource CardBorder}">
                    <u:SelectionList>
                        <u:SelectionList.Styles>
                            <Style Selector="u|SelectionListItem:selected">
                                <Setter Property="Foreground" Value="{DynamicResource SemiPurple7Color}" />
                            </Style>
                        </u:SelectionList.Styles>
                        <u:SelectionList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel
                                    Margin="16,4"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="16" />
                            </ItemsPanelTemplate>
                        </u:SelectionList.ItemsPanel>
                        <u:SelectionListItem>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <PathIcon Classes="Indicator" Data="{DynamicResource SemiIconSend}" />
                                <TextBlock Text="发送文字" />
                            </StackPanel>
                        </u:SelectionListItem>
                        <u:SelectionListItem>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <PathIcon Classes="Indicator" Data="{DynamicResource SemiIconDownloadStroked}" />
                                <TextBlock Text="加入房间" />
                            </StackPanel>
                        </u:SelectionListItem>
                    </u:SelectionList>
                </Border>

                <Border
                    Grid.Row="1"
                    MaxWidth="1000"
                    Margin="0,20,0,40"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    BorderThickness="2"
                    Classes="Shadow"
                    Theme="{StaticResource CardBorder}">


                    <Grid Margin="40,10" RowDefinitions="Auto,*">
                        <DockPanel Grid.Row="0">
                            <StackPanel
                                DockPanel.Dock="Left"
                                Orientation="Horizontal"
                                Spacing="8">
                                <PathIcon Data="{DynamicResource SemiIconComment}" />
                                <StackPanel Spacing="4">
                                    <TextBlock
                                        Classes="H5"
                                        Text="传送文字"
                                        Theme="{DynamicResource TitleTextBlock}" />
                                    <TextBlock Classes="Tertiary" Text="输入要传输的文本内容" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Right"
                                Spacing="4">
                                <TextBlock
                                    Classes="Tertiary"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="未连接" />
                                <TextBlock
                                    Classes="Tertiary"
                                    FontSize="12"
                                    FontWeight="ExtraLight"
                                    Text="尚未创建房间" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Classes="Tertiary"
                                        FontSize="10"
                                        Text="WS" />
                                    <Border
                                        Width="12"
                                        Height="12"
                                        Background="DarkRed"
                                        CornerRadius="6" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Classes="Tertiary"
                                        FontSize="10"
                                        Text="未连接" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Classes="Tertiary"
                                        FontSize="10"
                                        Text="|" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Classes="Tertiary"
                                        FontSize="10"
                                        Text="RTC" />
                                    <Border
                                        Width="12"
                                        Height="12"
                                        Background="DarkRed"
                                        CornerRadius="6" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Classes="Tertiary"
                                        FontSize="10"
                                        Text="未连接" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>

                        <Button
                            Name="PushButton"
                            Grid.Row="1"
                            Margin="0,20,0,10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="PushButton_OnClick">
                            <Button.BorderBrush>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Grid>
                                            <Rectangle
                                                Width="{Binding Path=Bounds.Width, ElementName=PushButton}"
                                                Height="{Binding Path=Bounds.Height, ElementName=PushButton}"
                                                Stroke="#FFC6CACD"
                                                StrokeDashArray="4,2"
                                                StrokeThickness="2" />
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Button.BorderBrush>
                            <StackPanel Spacing="16">
                                <Border
                                    Width="128"
                                    Height="128"
                                    Background="{DynamicResource SemiGrey2Color}"
                                    CornerRadius="64">
                                    <PathIcon
                                        Width="96"
                                        Height="96"
                                        Data="{DynamicResource SemiIconCloudUploadStroked}" />
                                </Border>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="32"
                                    Text="拖拽文件到这里" />
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="8">
                                    <TextBlock Classes="Tertiary" Text="或者" />
                                    <TextBlock Classes="Underline" Text="点击选择文件" />
                                </StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Classes="Tertiary"
                                    Text="支持多个文件同时上传，WebRTC点对点传输" />
                            </StackPanel>
                        </Button>
                    </Grid>

                </Border>
            </Grid>
        </Panel>
    </Grid>
</UserControl>