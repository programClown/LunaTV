<UserControl
    x:Class="LunaTV.Views.InnovationPlazaView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:LunaTV.ViewModels"
    xmlns:mpv="clr-namespace:HanumanInstitute.LibMpv.Avalonia;assembly=Luna.LibMpv.Avalonia"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:InnovationPlazaViewModel"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="*" RowDefinitions="*,Auto">
        <mpv:MpvView MpvContext="{Binding Mpv}" />

        <Grid Grid.Row="1" HorizontalAlignment="Stretch" ColumnDefinitions="Auto,*,Auto">
            <TextBox x:Name="UrlTextBox" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch"
                     Text="{Binding MediaUrl, Mode=TwoWay}" />
            <StackPanel Grid.Column="2" Margin="5" Orientation="Horizontal" Spacing="5">
                <Button Command="{Binding Play}" Content="Load" />
                <Button Command="{Binding Pause}" Content="Pause / Resume" />
                <Button Command="{Binding Stop}" Content="Stop" />
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>